<div class="room-single-intro fade-in-up">
  <div class="content-container">
    <h1 class="room-title">{{ page.metafields.custom.room_title | default: section.settings.title }}</h1>
    <p class="room-description">
      {{ page.metafields.custom.room_description | default: section.settings.description }}
    </p>
  </div>
  <div class="image-container">
    {% if page.metafields.custom.room_image != blank %}
      <img
        src="{{ page.metafields.custom.room_image | image_url: width: 1200 }}"
        alt="room image"
        loading="eager"
      >
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Room Single Into",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titulo",
      "default": "Oslo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripcion",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Sed faucibus turpis in eu mi bibendum neque."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen principal"
    }
  ],
  "presets": [
    {
      "name": "Room Single Intro"
    }
  ]
}
{% endschema %}

{{ 'room-single-intro.css' | asset_url | stylesheet_tag }}
{{ 'fade-in-up.js' | asset_url | script_tag }}
