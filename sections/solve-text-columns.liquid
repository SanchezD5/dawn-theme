<section class="solve-text-columns">
  <div class="container">
    <div class="text-columns-grid">
      <h2 class="text-columns-title">{{ section.settings.heading }}</h2>
      <div class="text-columns-content">
        <p>{{ section.settings.paragraph }}</p>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Solve - Text columns",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph Text",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed non risus. Suspendisse lectus tortor, dignissim sit amet, adipiscing nec, ultricies sed, dolor."
    }
  ],
  "presets": [
    {
      "name": "Solve Text Columns"
    }
  ]
}
{% endschema %}

{{ 'solve-text-columns.css' | asset_url | stylesheet_tag }}