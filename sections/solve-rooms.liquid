<section class="solve-rooms-section">
  <div class="container">
    <h2 class="rooms-title">{{ section.settings.title }}</h2>
    <div class="rooms-grid">
      {% for block in section.blocks %}
        <div class="room-item">
          <div class="room-image-wrapper">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 800  }}"
                alt="{{ block.settings.label }}"
                class="room-image"
              >
            {% endif %}
          </div>
          <div class="room-overlay">
            <h3 class="room-label">{{ block.settings.label }}</h3>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="room-link">Explore â†’</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Solve - Rooms",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Rooms"
    }
  ],
  "blocks": [
    {
      "type": "room",
      "name": "Room Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Room Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Room Label",
          "default": "LIVING"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link to Collection or Page"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
    "name": "Solve Rooms",
    "blocks": [
        {
        "type": "room"
        },
        {
        "type": "room"
        },
        {
        "type": "room"
        }
    ]
    }
  ]
}
{% endschema %}

