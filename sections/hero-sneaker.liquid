{% schema %}
{
  "name": "Hero Sneaker Adidas",
  "tag": "section",
  "class": "section hero-sneaker-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagen principal"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Titulo principal",
      "default": "Nueva colecci√≥n Adidas Forum Mid"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del boton"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "texto del boton",
      "default": "Compra ahora"
    }
  ],
  "presets": [
    {
      "name": "Hero Sneaker Adidas"
    }
  ]
}
{% endschema %}

<section class="hero-sneaker" role="img" arial-label="{{ section.settings.heading }}">
  {% if section.settings.hero_image != blank %}
    <img
      src="{{ section.settings.hero_image | image_url }}"
      alt="{{ section.settings.heading | escape }}"
      class="hero-image"
    >
  {% endif %}

  <div class="hero-content">
    <h1>{{ section.settings.heading }}</h1>
    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-button">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</section>

{{ 'component-hero-sneaker.css' | asset_url | stylesheet_tag }}