{% schema %}
{
  "name": "Sneakers destacados",
  "tag": "section",
  "class": "featured-sneakers-wrapper",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Colección de productos"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título de la sección",
      "default": "Destacados"
    }
  ],
  "presets": [
    {
      "name": "Sneakers destacados"
    }
  ]
}
{% endschema %}

<section class="featured-sneakers">
  <h2>{{ section.settings.title }}</h2>

  {% assign collection = collections[section.settings.collection] %}
  {% if collection.products.size > 0 %}
    <div class="sneakers-grid">
      {% for product in collection.products limit: 4 %}
        <div class="sneaker-card">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
            <h3>{{ product.title }}</h3>
            <p>{{ product.price | money }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No hay productos en esta colección.</p>
  {% endif %}
</section>
