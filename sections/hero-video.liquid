{% schema %}
{
  "name": "Hero Video",
  "tag": "section",
  "class": "hero-video-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Titulo del video",
      "default": "Conoce la nueva colecci√≥n"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del boton"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del boton",
      "default": "Compra ahora"
    },
    {
      "type": "text",
      "id": "video_file",
      "label": "Url del video"
    }
  ],
  "presets": [
    {
      "name": "Hero Video"
    }
  ]
}
{% endschema %}

<section class="hero-video-wrapper">
  <div class="video-container">
    {% if section.settings.video_file != blank %}
      <video autoplay muted loop playsinline class="hero-video">
    <source src="{{ section.settings.video_file }}" type="video/mp4">
    Tu navegador no soporta el video.
  </video>
    {% endif %}
    <div class="video-overlay">
      <h2>{{ section.settings.heading }}</h2>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.setings.button_link }}" class="cta-button">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

{{ 'hero-video.css' | asset_url | stylesheet_tag }}
