{% schema %}
{
  "name": "Glamour Hero",
  "tag": "section",
  "class": "glamour-hero-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagen de fondo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Titulo Principal",
      "default": "Descubre una experiencia unica al aire libre"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtitulo",
      "default": "Explora nuestro exclusivo campamento de lujo"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del boton",
      "default": "Reserva ahora"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del boton"
    }
  ],
  "presets": [
    {
      "name": "Glamour Hero"
    }
  ]
}
{% endschema %}

<section class="glamour-hero" style="background-image: url({{ section.settings.background_image | image_url }});">
  <div class="glamour-hero-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    {% if section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-btn">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

{{ 'glamour-hero.css' | asset_url | stylesheet_tag }}
