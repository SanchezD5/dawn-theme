{% schema %}
{
  "name": "Activity Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Illustration"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Activity"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Camp Will Be For You What You Want It To Be."
    }
  ],
  "blocks": [
    {
    "type": "activity_item",
    "name": "Activity Icon + Text",
    "settings": [
        {
        "type": "image_picker",
        "id": "icon",
        "label": "Icon"
        },
        {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Wild Life"
        },
        {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer egestas nisi nec libero fermentum."
        }
    ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
    "name": "Activity Icons"
    }
  ]
}
{% endschema %}

<section class="activity-section">
  <div class="activity-container">
    <!-- Izquierda -->
    <div class="activity-left">
      {% if section.settings.subtitle != blank %}
        <p class="activity-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
      {% if section.settings.title != blank %}
        <h2 class="activity-title">{{ section.settings.title }}</h2>
      {% endif %}
      {%- if section.settings.main_image != blank -%}
        <img src="{{ section.settings.main_image | image_url: width: 600}}" alt="Activity Illustration">
      {%- endif -%}
    </div>

    <!-- Derecha -->
    <div class="activity-right">
      <div class="activity-grid">
        {%- for block in section.blocks -%}
          {% if block.type == 'activity_item' %}
            <div class="activity-item">
              {% if block.settings.icon %}
                <img src="{{ block.settings.icon | image_url: width: 60}}" alt="{{ block.settings.heading }}">
              {% endif %}
              <h3>{{ block.settings.heading }}</h3>
              <p>{{ block.settings.description }}</p>
            </div>
          {% endif %}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{{ 'activity-icons.css' | asset_url | stylesheet_tag }}